.well.calendar-header
  = link_to date: date.prev_month do
    %i.icon-chevron-left
  = l(date, format: "%B %Y")
  = link_to date: date.next_month do
    %i.icon-chevron-right

= calendar.month_table(self) do |day|
  %dl
    %dt
      = link_to day.day, new_account_event_path(date: day), confirm: t(".create_event?")
    %dd
      - events[day].each do |event|
        %p
          = link_to_if can?(:edit_account_event, :edit, { current_user_id: current_user.id,
            event_user_id: event.user_id} ), event.name, edit_account_event_path(event)
